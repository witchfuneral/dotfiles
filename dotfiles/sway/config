# my sway config

set $mod Mod4
font pango:JetBrainsMonoNL Nerd Font Propo 10

# for laptop
output eDP-1 {
    scale 1.25
    scale_filter linear 
    bg $HOME/Pictures/Wallpapers/arc-mountains.png fill
}

bar { 
     swaybar_command waybar
}

input * {
    xkb_layout "tr"
}

input type:keyboard {
    repeat_delay 300
    repeat_rate 50
}

# for my mouse
input 7511:64096:Beken_2.4G_Wireless_Device {
    natural_scroll enabled
    accel_profile "flat"
    pointer_accel -0.1
}

# laptop touchpad
input 1739:52828:SYNA8020:00_06CB:CE5C_Touchpad {
    natural_scroll enabled
    dwt enabled
    tap enabled
    tap_button_map lrm
    drag enabled
}

# idle configuration
exec $HOME/.local/bin/lock.sh &

# manual lock
bindsym --release $mod+Alt+l exec 'swaylock-blur'

## colors
# import from wal
include "$HOME/.cache/wal/colors-sway"

# defined colors
set $alt_background #0d0d0d
set $alt_font #333333
set $urgent_background #B00000
set $urgent_font #240000

# for window titles
client.focused       $color0 $background $foreground $color7 $background
client.background          $alt_background $alt_background $alt_font
client.urgent          $urgent_background $urgent_background $urgent_font

# volume adjustment
bindsym XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 10%+
bindsym XF86AudioLowerVolume exec --no-startup-id wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 10%-
bindsym XF86AudioMute exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

# media player
bindsym XF86AudioMedia exec playerctl play-pause
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next

# brightness controls
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

gaps inner 2
gaps outer 1
for_window [class="^.*"] border normal 1
default_border normal 1
default_floating_border normal 1
hide_edge_borders smart

# start a terminal
bindsym $mod+Return exec kitty

# kill focused window
bindsym $mod+q kill

# wmenu
# keep this as a monochrome color scheme - will change when i figure out wal with it
set $menu 'wmenu-run -N 000000 -n ffffff -M 000000 -m ffffff -S ffffff -s 000000 -p run: -b -i -f "JetBrainsMonoNL Nerd Font Propo 12"'

bindsym $mod+d exec --no-startup-id $menu

# file manager
bindsym $mod+e exec kitty -e ranger

# launch nvim
bindsym $mod+n exec kitty -e nvim

# spotify-player
bindsym $mod+s exec kitty -e spotify_player

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

## screenshot

# region
bindsym $mod+Shift+s exec screencap-region

# desktop
bindsym $mod+Print exec screencap

# run htop
bindsym $mod+t exec kitty -e htop

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+Tab floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6

# reload the configuration file
bindsym $mod+Shift+c reload

# move to scratchpad
bindsym $mod+Shift+h move scratchpad

# show scratchpad
bindsym $mod+0 scratchpad show

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# startup
exec wal -i ~/Pictures/Wallpapers/arc-mountains.png &
exec dbus-update-activation-environment --systemd DBUS_SESSION_BUS_ADDRESS SEATD_SOCK DISPLAY WAYLAND_DISPLAY XAUTHORITY XDG_CURRENT_DESKTOP=sway &
exec mako &
exec /usr/lib/mate-polkit/polkit-mate-authentication-agent-1 &
exec systemctl --user start xdg-desktop-portal.service &
exec sh ~/.config/mako/update-theme.sh
exec xfce4-volumed-pulse &
exec hypridle &
exec $HOME/.local/bin/spoof

# autostart applications
exec Telegram &
exec discord-patch &
exec steam &
exec feishin &
